{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        //"noEmit": true,
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "preserveConstEnums": true,
        "strict": true,
        //"strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "./typescript/**/*",
    ],
    "exclude": [
        "node_modules",
    ]
}